#: import ListItemButton kivy.uix.listview.ListItemButton
#: import ListAdapter kivy.adapters.listadapter.ListAdapter


NostraRoot:

<NostraRoot>:
    main: main_screen

    MainScreen:
        id: main_screen


<MainScreen>:
	tabs: tabs_widget
    orientation: "vertical"

    Bar:
    Tabs:
		id: tabs_widget


<AddTransactionScreen>:
    Label:
        text: "rolou!"
    Button:
        text: "OK"
        on_press: app.root.show_main_screen()


<Bar>:
    pos_hint: {'top':1}

    ActionView:
        use_separator: True
        ActionPrevious:
            title: 'Nostra Plata'
            with_previous: False
        ActionOverflow:
        ActionButton:
            text: 'Btn1'
            on_press: app.root.show_add_transaction_screen()


<Tabs>:
	dashboard: dashboard_tab
	history: history_tab

    DashboardTab:
		id: dashboard_tab
    HistoryTab:
		id: history_tab


<DashboardTab>:
    text: "Status"
	listview: dashboard_listview

    canvas:
        Color:
            rgba: 1, 1, 1, 1
        Rectangle:
            pos: self.pos
            size: self.size
    ListView:
		id: dashboard_listview
        adapter:
            ListAdapter(data=[], cls=ListItemButton)


<ListItemButton>:
    selected_color: 0.5, 0.2, 1, 1
    deselected_color: 0, 1, 1, 1
    size: root.width, '50dp'
    font_size: '22dp'


<HistoryTab>:
    text: "History"

    canvas:
        Color:
            rgba: 0, .5, .5, 1
        Rectangle:
            pos: self.pos
            size: self.size
    Label:
        text: "reagan!"

