#: import ListItemButton kivy.uix.listview.ListItemButton
#: import ListAdapter kivy.adapters.listadapter.ListAdapter


MainScreen:

<MainScreen>:
    orientation: "vertical"
    Bar:
    Tabs:

<Bar>:
    pos_hint: {'top':1}
    ActionView:
        use_separator: True
        ActionPrevious:
            title: 'Nostra Plata'
            with_previous: False
        ActionOverflow:
        ActionButton:
            text: 'Btn1'

<Tabs>:
    MainTab:
    HistoryTab:

<MainTab>:
    text: "Status"
    canvas:
        Color:
            rgba: 1, 1, 1, 1
        Rectangle:
            pos: self.pos
            size: self.size
    ListView:
        adapter:
            ListAdapter(data=["History number %i" % index for index in range(30)], cls=ListItemButton)

<ListItemButton>:
    selected_color: 0.5, 0.2, 1, 1
    deselected_color: 0, 1, 1, 1
    size: root.width, '50dp'
    font_size: '22dp'

<HistoryTab>:
    text: "History"
    canvas:
        Color:
            rgba: 0, .5, .5, 1
        Rectangle:
            pos: self.pos
            size: self.size
    Label:
        text: "reagan!"


