#: import ListItemButton kivy.uix.listview.ListItemButton
#: import ListAdapter kivy.adapters.listadapter.ListAdapter


<MembersScreen>:
    orientation: "vertical"

    Label:
        text: "Members"
        height: "46dp"
        size_hint_y: None
    ListView:
		id: members_listview
        adapter:
            ListAdapter(data=['fulana', 'beltrano', 'cicrane'],
            cls=ListItemButton)

<ListItemButton>:
    on_press: app.root.show_new_loan_screen()

<NewLoanScreen>:
    orientation: "vertical"

    Label:
        text: "Add New Loan"
        height: "46dp"
        size_hint_y: None
    BoxLayout:
        height: "46dp"
        size_hint_y: None
        Label:
            text: "Amount"
        Label:
            text: "Type"
    BoxLayout:
        height: "33dp"
        size_hint_y: None
        TextInput:
            size_hint_x: 1
        ToggleButton:
            text: "Lend"
            group: "type"
            size_hint_x: 0.5
        ToggleButton:
            text: "Borrow"
            group: "type"
            size_hint_x: 0.5
    Button:
        text: "OK"
        on_press: app.root.show_main_screen()
        size_hint_x: 1



