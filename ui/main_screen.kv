#: import ListItemButton kivy.uix.listview.ListItemButton
#: import ListAdapter kivy.adapters.listadapter.ListAdapter
#: import widgets widgets


<MainScreen>:
	dashboard: dashboard_tab
	history: history_tab

    DashboardTab:
		id: dashboard_tab
    HistoryTab:
		id: history_tab



<DashboardTab>:
    text: "Dashboard"
    orientation: "vertical"
	listview: dashboard_listview
    balance_label: balance_label

    # canvas:
    #     Color:
    #         rgba: 1, 1, 1, 1
    #     Rectangle:
    #         pos: self.pos
    #         size: self.size
    Label:
        id: balance_label
        text: "Saldo"
        height: "46dp"
        size_hint_y: None
    ListView:
		id: dashboard_listview
        adapter:
            ListAdapter(data=[], cls=widgets.FriendButton)


<FriendButton>:
    selected_color: 0.5, 0.2, 1, 1
    deselected_color: 0, 1, 1, 1
    size: root.width, '50dp'
    font_size: '22dp'
    on_press: app.root.show_new_loan_screen(self.text)


<HistoryTab>:
    text: "History"

    canvas:
        Color:
            rgba: 0, .5, .5, 1
        Rectangle:
            pos: self.pos
            size: self.size
    Label:
        text: "reagan!"
